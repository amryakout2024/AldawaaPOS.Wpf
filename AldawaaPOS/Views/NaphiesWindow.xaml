<Window x:Class="AldawaaPOS.Views.NaphiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:AldawaaPOS.Views" x:Name="nw"
        mc:Ignorable="d" WindowState="Maximized" WindowStyle="None"
        Title="NaphiesWindow" Height="450" Width="800">
    <Grid Background="GhostWhite" x:Name="mainGrid" MouseLeftButtonDown="mainGrid_MouseLeftButtonDown" MouseDown="mainGrid_MouseDown">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="FontWeight" Value="DemiBold"/>
                <Setter Property="Padding" Value="0,0,0,0"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="DarkBlue"/>
                    </Trigger>
                    <Trigger Property="IsMouseCaptured" Value="True">
                        <Setter Property="Padding" Value="5,5,0,0"/>
                    </Trigger>

                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
            Orientation="Horizontal"
                    VerticalAlignment="Top"
            HorizontalAlignment="Right">
            <fa:ImageAwesome Icon="WindowMinimize" Style="{StaticResource FaMiniStyle}" Name="FaMini" MouseDown="FaMini_MouseDown"/>
            <!--<fa:ImageAwesome Icon="WindowMaximize" Style="{StaticResource FaMaxStyle}" Name="FaMax" MouseDown="FaMax_MouseDown"/>-->
            <fa:ImageAwesome Icon="Close" Style="{StaticResource FaCloseStyle}" Name="FaClose" MouseDown="FaClose_MouseDown"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="5">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0,0,0"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                    VerticalAlignment="Center" 
                    FontSize="16"
                    Text="Payer"/>

                    <ComboBox Grid.Row="0" Grid.Column="1"
                          Style="{StaticResource ComboBoxStyle}" 
                          Margin="5 0 5 0"
                          HorizontalAlignment="Stretch" 
                          Tag="Select insurance company" 
                          Foreground="Black">
                    <!--ItemsSource="{Binding SourceCollection}" DisplayMemberPath="KeLoHeName" 
                          SelectedItem="{Binding SelectedKeLoHe}" SelectedIndex="{Binding SelectedKeLoHeIndex}">-->
                        <ComboBoxItem Content="Al-Etihad"/>
                        <ComboBoxItem Content="Bupa"/>
                        <ComboBoxItem Content="Malath"/>
                        <ComboBoxItem Content="Medgulf"/>
                        <ComboBoxItem Content="TCS-Buruj"/>
                        <ComboBoxItem Content="TCS-UCA"/>
                        <ComboBoxItem Content="TCS-Alsagar"/>
                        <ComboBoxItem Content="TCS-Trade union"/>
                    </ComboBox>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                    VerticalAlignment="Center" 
                    FontSize="16"
                    Text="Patient ID"/>

                    <TextBox Height="35"
                    Grid.Row="1" Grid.Column="1" Tag="Enter valid id number" 
                    Style="{StaticResource MainTextBoxStyle}"
                    Margin="5,0,5,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0"
                        VerticalAlignment="Center" 
                        FontSize="16"
                        Text="PreAuth ref"/>

                    <TextBox Height="35"
                    Grid.Row="2" Grid.Column="1" Tag="Enter Preauthorization number"
                        Style="{StaticResource MainTextBoxStyle}"
                        Margin="5,0,5,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0"
                        VerticalAlignment="Center" 
                        FontSize="16"
                        Text="From Date"/>

                    <DatePicker Grid.Row="3" Grid.Column="1" Tag="Select date"
                    Style="{StaticResource DatePickerStyle}" />
                    <!--SelectedDate="{Binding DateStart,UpdateSourceTrigger=PropertyChanged}"/>-->

                    <TextBlock Grid.Row="4" Grid.Column="0"
                        VerticalAlignment="Center" 
                        FontSize="16"
                        Text="To Date"/>

                    <DatePicker 
                    Grid.Row="4" Grid.Column="1" Tag="Select date"
                    Style="{StaticResource DatePickerStyle}" />
                    <!--SelectedDate="{Binding DateStart,UpdateSourceTrigger=PropertyChanged}"/>-->

                    <Grid Grid.Row="5" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,30,0"
                        FontSize="14"
                        Content="Show all"/>
                        <CheckBox Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="30,0,0,0"
                        FontSize="14"
                        Content="Advances"/>
                    </Grid>

                </Grid>
            </Grid>
            <Grid Grid.Column="1"
                  x:Name="row2Primary"
                  Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--first column buttons-->
                <Button Grid.Column="0" Grid.Row="0"
                    Content="New auth"
                    Background="DarkRed"/>
                <Button Grid.Column="0" Grid.Row="1"
                    Content="Search"
                    Background="DarkBlue"/>
                <Button Grid.Column="0" Grid.Row="2"
                    Content="Display"
                    Background="DarkGoldenrod"/>
                <Button Grid.Column="0" Grid.Row="4"
                    Content="Retry"
                    Background="DarkCyan"/>
                
                <!--second column buttons-->

                <Button Grid.Column="1" Grid.Row="0"
                    Content="Dispense"
                    Background="DarkMagenta"/>
                <Button Grid.Column="1" Grid.Row="1"
                    Content="Invoice"
                    Background="DarkKhaki"/>
                <Button Grid.Column="1" Grid.Row="2"
                    Content="Follow up"
                    Background="DarkViolet"/>
                <Button Grid.Column="1" Grid.Row="3"
                    Content="Cancel auth" x:Name="more"
                    Background="DarkOliveGreen"/>

                <!--third column buttons-->

                <Button Grid.Column="2" Grid.Row="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="brOMS" Padding="0,0,0,0" Background="DarkGreen" Margin="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Grid.Column="0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                   x:Name="lblOMS"
                                                FontSize="14"
                                                Content="Refill orders"/>
                                                <Border Grid.Column="1" 
                                                    Margin="5"
                                                    CornerRadius="20"
                                                    Height="30" 
                                                    VerticalAlignment="Top"
                                                    Background="Red">
                                                    <Label
                                                    Content="18"
                                                    FontSize="10"
                                                    FontWeight="Bold"
                                                    VerticalAlignment="Stretch"
                                                    Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="lblOMS" Property="Foreground" Value="DarkBlue"/>
                                                <Setter TargetName="brOMS" Property="BorderBrush" Value="DarkBlue"/>
                                                <Setter TargetName="brOMS" Property="BorderThickness" Value="0.5"/>
                                                <Setter TargetName="brOMS" Property="Background" Value="#c3ecf7"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseCaptured" Value="True">
                                                <Setter TargetName="brOMS" Property="Padding" Value="5,5,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>

                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" Grid.Row="1"
                    Content="Update advance"
                    Background="DarkBlue"/>
                <Button Grid.Column="2" Grid.Row="2"
                    Content="Eligibility"
                    Background="DarkSalmon"/>
                <Button Grid.Column="2" Grid.Row="3"
                    Content="Close" x:Name="close" Click="close_Click"
                    Background="IndianRed"/>

            </Grid>
        </Grid>
        <DataGrid Grid.Row="2" 
                      VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Visible"
                      Margin="7,5,5,5" 
                      Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header=""/>
                <DataGridTextColumn Header="Type" Width="0.5*"/>
                <DataGridTextColumn Header="Patient name" Width="*"/>
                <DataGridTextColumn Header="Patient Id" Width="*"/>
                <DataGridTextColumn Header="Bayer" Width="*"/>
                <DataGridTextColumn Header="Request time" Width="*"/>
                <DataGridTextColumn Header="Response time" Width="*"/>
                <DataGridTextColumn Header="Approval status" Width="*"/>
                <DataGridCheckBoxColumn Header="Is invoiced"/>
                <DataGridCheckBoxColumn Header="Error"/>
                <DataGridCheckBoxColumn Header="Need comment"/>
                <DataGridCheckBoxColumn Header="Is Dispensed"/>
                <DataGridCheckBoxColumn Header="Is cancelled"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
