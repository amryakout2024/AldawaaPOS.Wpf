<Window x:Class="AldawaaPOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AldawaaPOS.Views"
        mc:Ignorable="d" WindowStyle="None" WindowState="Maximized"
        WindowStartupLocation="CenterScreen" Width="800" Height="500"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            VerticalAlignment="Center" FontSize="30"
            HorizontalAlignment="Center">
            <Run Text="Welcome "/>
            <Run x:Name="StaffId"/>
        </TextBlock>

        <TextBlock
            Grid.Row="1"
            VerticalAlignment="Center" FontSize="30"
            HorizontalAlignment="Center"
            Text="The main page is under construction"/>
        
        <Button 
            Grid.Row="2"
            Width="200"
            Foreground="Black"
            Height="100"
            Click="Button_Click"
            Content="Close" />
    </Grid>
</Window>
