<Window x:Class="AldawaaPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AldawaaPOS"
        mc:Ignorable="d" x:Name="mw"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Height="500" Width="800" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" Background="Transparent" WindowStyle="None" >
    <Window.Resources>
        <Style x:Key="FaCloseStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Margin" Value="30,10,10,0"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>
        
        <Style x:Key="FaMaxStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Margin" Value="30,10,0,0"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>
        
        <Style x:Key="FaMiniStyle" TargetType="fa:ImageAwesome">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

            </Style.Triggers>
        </Style>

        <Style x:Key="StringStoryBoard" TargetType="TextBlock">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard >
                        <Storyboard Storyboard.TargetProperty="Text">
                            <StringAnimationUsingKeyFrames>
                                <DiscreteStringKeyFrame Value="C" KeyTime="0:0:0.1"/>
                                <DiscreteStringKeyFrame Value="Co" KeyTime="0:0:0.2"/>
                                <DiscreteStringKeyFrame Value="Cop" KeyTime="0:0:0.3"/>
                                <DiscreteStringKeyFrame Value="Copy" KeyTime="0:0:0.4"/>
                                <DiscreteStringKeyFrame Value="Copy " KeyTime="0:0:0.5"/>
                                <DiscreteStringKeyFrame Value="Copy r" KeyTime="0:0:0.6"/>
                                <DiscreteStringKeyFrame Value="Copy ri" KeyTime="0:0:0.7"/>
                                <DiscreteStringKeyFrame Value="Copy rig" KeyTime="0:0:0.8"/>
                                <DiscreteStringKeyFrame Value="Copy righ" KeyTime="0:0:0.9"/>
                                <DiscreteStringKeyFrame Value="Copy right" KeyTime="0:0:1"/>
                                <DiscreteStringKeyFrame Value="Copy right " KeyTime="0:0:1.1"/>
                                <DiscreteStringKeyFrame Value="Copy right @" KeyTime="0:0:1.2"/>
                                <DiscreteStringKeyFrame Value="Copy right @2" KeyTime="0:0:1.3"/>
                                <DiscreteStringKeyFrame Value="Copy right @20" KeyTime="0:0:1.4"/>
                                <DiscreteStringKeyFrame Value="Copy right @201" KeyTime="0:0:1.5"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015" KeyTime="0:0:1.6"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 " KeyTime="0:0:1.7"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 D" KeyTime="0:0:1.8"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 DM" KeyTime="0:0:1.9"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 DMS" KeyTime="0:0:2"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 DMSC" KeyTime="0:0:2"/>
                                <DiscreteStringKeyFrame Value="Copy right @2015 DMSCO" KeyTime="0:0:2.1"/>
                            </StringAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Border Background="WhiteSmoke" BorderThickness="0.4" BorderBrush="Gold"
            CornerRadius="10" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <StackPanel 
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Right">
                <fa:ImageAwesome Icon="WindowMinimize" Style="{StaticResource FaMiniStyle}" Name="FaMini" MouseDown="FaMini_MouseDown"/>
                <fa:ImageAwesome Icon="WindowMaximize" Style="{StaticResource FaMaxStyle}" Name="FaMax" MouseDown="FaMax_MouseDown"/>
                <fa:ImageAwesome Icon="Close" Style="{StaticResource FaCloseStyle}" Name="FaClose" MouseDown="FaClose_MouseDown"/>
            </StackPanel>
            
            <StackPanel 
            Orientation="Horizontal"
            Grid.Row="1" Margin="0,0,0,10"
            HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Row="0"
                  Foreground="DarkBlue"     
                   VerticalAlignment="Center"
            Text="Aldawaa Pharmacy"
            FontSize="30">
                    </TextBlock>
                    <Separator
                    Margin="25,0,25,0"
                    Background="Gold"/>
                </StackPanel>
                <Image 
                Height="50"
                VerticalAlignment="Center"
                Source="/Images/aldawaa2.PNG"/>
            </StackPanel>

            <Grid 
            Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button 
            Grid.Row="0" Grid.Column="0" Click="login_Click"
            Content="POS Login" x:Name="login">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,0,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="DarkGreen"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                </Button>
                <Button x:Name="updateBatch" Click="updateBatch_Click"
            Grid.Row="0" Grid.Column="1"
            Content="Update Batch">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,10,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="SeaGreen"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>

                    </Button.Style>
                </Button>
                <Button 
            Grid.Row="1" Grid.Column="0" x:Name="controlPanel" Click="controlPanel_Click"
            Content="Control Panel">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,0,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="SaddleBrown"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>

                    </Button.Style>
                </Button>
                <Button x:Name="backOffice" Click="backOffice_Click"
            Grid.Row="1" Grid.Column="1"
            Content="Back Office">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,10,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="Firebrick"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>

                    </Button.Style>
                </Button>
                <Button x:Name="restart" Click="restart_Click"
            Grid.Row="2" Grid.Column="0"
            Content="Restart">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,0,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="IndianRed"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                </Button>
                <Button x:Name="shoutDown"
            Grid.Row="2" Grid.Column="1"
            Content="Shut down" Click="shoutDown_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="10,0,10,10"/>
                            <Setter Property="FontSize" Value="25"/>
                            <Setter Property="Background" Value="DarkRed"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkBlue"/>
                                    <Setter Property="Foreground" Value="Gold"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter Property="Background" Value="DodgerBlue"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>

                            </Style.Triggers>
                        </Style>

                    </Button.Style>

                </Button>
            </Grid>

            <StackPanel Orientation="Horizontal" 
            Grid.Row="3" Margin="0,0,5,5"
            HorizontalAlignment="Right">
                <TextBlock Grid.Row="2"
                   Foreground="Gray"
             Style="{StaticResource StringStoryBoard}"
                   VerticalAlignment="Center"
            FontSize="15"/>
                <Image Height="40" Visibility="Collapsed"
                VerticalAlignment="Center"
                Source="/Images/dmsco2.PNG">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Window.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames 
                                                BeginTime="00:00:00"  
                                                Storyboard.TargetProperty="(UIElement.Visibility)">
                                                <DiscreteObjectKeyFrame KeyTime="00:00:2.3" Value="{x:Static Visibility.Visible}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>

        </Grid>
    </Border>
</Window>
