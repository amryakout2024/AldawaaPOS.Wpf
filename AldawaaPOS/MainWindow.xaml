<Window x:Class="AldawaaPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AldawaaPOS"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <Style x:Key="btnStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkBlue"/>
                    <Setter Property="Foreground" Value="Gold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="0"
            HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Label Grid.Row="0"
                  Foreground="DarkBlue"     
                   VerticalAlignment="Center"
            Content="Welcome to Aldawaa Pharmacy"
            FontSize="30">
                </Label>
                <Separator
                    Margin="25,0,25,0"
                    Background="Gold"/>
            </StackPanel>
            <Image 
                Height="50"
                VerticalAlignment="Center"
                Source="/Images/aldawaa.png"/>
        </StackPanel>

        <Grid 
            Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button 
            Grid.Row="0" Grid.Column="0"
            Content="Aldawaa POS">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="Background" Value="DarkGreen"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border 
                            BorderThickness="1" 
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}" 
                            Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkBlue"/>
                                <Setter Property="Foreground" Value="Gold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Style>

            </Button>
            <Button 
                Background="SeaGreen"
            Style="{StaticResource btnStyle}"
            Grid.Row="0" Grid.Column="1"
            Content="Update Batch">

            </Button>
            <Button 
                Background="DarkBlue"
            Style="{StaticResource btnStyle}"
            Grid.Row="1" Grid.Column="0"
            Content="Control Panel">

            </Button>
            <Button 
                Background="DarkSlateBlue"
            Style="{StaticResource btnStyle}"
            Grid.Row="1" Grid.Column="1"
            Content="Back Office">

            </Button>
            <Button 
                Background="IndianRed"
            Style="{StaticResource btnStyle}"
            Grid.Row="2" Grid.Column="0"
            Content="Restart">

            </Button>
            <Button 
                Background="DarkRed"
            Style="{StaticResource btnStyle}"
            Grid.Row="2" Grid.Column="1"
            Content="Shut down">

            </Button>
        </Grid>

        <StackPanel Orientation="Horizontal" 
            Grid.Row="2"
            HorizontalAlignment="Right">
            <Label Grid.Row="2"
                   Foreground="Gray"
            Content="Copy right @2015 DMSCO"
                   VerticalAlignment="Center"
            FontSize="15"/>
            <Image Height="40"
                VerticalAlignment="Center"
                Source="/Images/dmsco.png"/>
        </StackPanel>

    </Grid>
</Window>
