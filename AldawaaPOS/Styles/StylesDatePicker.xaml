    <Style x:Key="DatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="5,0,5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Grid VerticalAlignment="Center">
                        <Border x:Name="Border"
                                Grid.ColumnSpan="2"
                                Height="35"
                                HorizontalAlignment="Stretch"
                                BorderThickness="1"
                                BorderBrush="DarkBlue"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Foreground="DarkBlue"
                                                   BorderThickness="0"
                                                   Grid.Column="0"
                                                   Text="   "
                                                   Margin="2,0,2,0"
                                                   IsReadOnly="True"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Center"
                                                   FontFamily="Roboto"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Padding="0 1 0 1"/>
                                <Button Content="Show"  
                                        x:Name="PART_Button"
                                        Style="{StaticResource DateButtonStyle}"
                                        Grid.Column="1"/>
                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=PART_TextBox}"
                                       StaysOpen="False"
                                       HorizontalOffset="17"/>
                                <Label x:Name="Watermark"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="Silver"
                                       Visibility="Collapsed"
                                       Padding="11 0 20 0"
                                       Content="{TemplateBinding Tag}"
                                       FontFamily="Roboto"
                                       FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="Goldenrod" TargetName="Border"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="Goldenrod" TargetName="Border"/>
                            <Setter Property="BorderThickness" Value="1" TargetName="Border"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="Watermark"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DatePickerSamllStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Grid>
                        <Border x:Name="Border"
                                Grid.ColumnSpan="2"
                                Height="30"
                                Width="200"
                                BorderThickness="2"
                                BorderBrush="Green"
                                CornerRadius="10"
                                Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Text="اختر التاريخ"
                                                   Foreground="DarkSlateBlue"
                                                   BorderThickness="0"
                                                   Grid.Column="0"
                                                   FontFamily="Roboto"
                                                   FontSize="10"
                                                   VerticalAlignment="Center"
                                                   Padding="25 0 0 0"/>
                                <Button Content="عرض"
                                        FontSize="10"
                                        x:Name="PART_Button"
                                        Style="{StaticResource DateButtonStyle}"
                                        Grid.Column="1"/>
                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding ElementName=PART_TextBox}"
                                       StaysOpen="False"
                                       HorizontalOffset="17"/>
                                <!--<Label x:Name="Watermark"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="red"
                                       Visibility="Collapsed"
                                       Padding="11 0 20 0"
                                       Content="{TemplateBinding Tag}"
                                       FontFamily="Roboto"
                                       FontSize="11"/>-->
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="Pink" TargetName="Border"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="Pink" TargetName="Border"/>
                            <Setter Property="BorderThickness" Value="0.5 0.5 0.5 3" TargetName="Border"/>
                        </Trigger>
                        <!--<MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" TargetName="Watermark"/>
                        </MultiTrigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

