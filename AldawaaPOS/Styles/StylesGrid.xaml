                            SnapsToDevicePixels="True"
                            HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

